<UserControl x:Class="Proghebdo.ProgJour"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proghebdo" Loaded="UserControl_Loaded"
             mc:Ignorable="d" SizeChanged="UserControl_SizeChanged"
             Height="302" d:DesignWidth="800" MinWidth="440">
    <Grid x:Name="Gdecran" Tag="V" Margin="0,0,1,0" Background="#FF252526">
