        <Line X1="0" Y1="20" X2="{Binding ElementName=Gdecran,Path=ActualWidth}" Y2="20" Stroke="Red" Margin="60,0,0,0" Tag="H" />
        <Line X1="0" Y1="20" X2="{Binding ElementName=Gdecran,Path=ActualWidth}" Y2="20" Stroke="Red" Margin="60,0,0,0" Tag="H" />
        <Line X1="0" Y1="20" X2="{Binding ElementName=Gdecran,Path=ActualWidth}" Y2="20" Stroke="Red" Margin="60,0,0,0" Tag="H" />
        <Line X1="0" Y1="20" X2="{Binding ElementName=Gdecran,Path=ActualWidth}" Y2="20" Stroke="Red" Margin="60,0,0,0" Tag="H" />
        <Line X1="0" Y1="20" X2="{Binding ElementName=Gdecran,Path=ActualWidth}" Y2="20" Stroke="Red" Margin="60,0,0,0" Tag="H" />
        <Line Tag="V"  X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line Tag="V"  X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2B8D07" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <StackPanel x:Name="Skmarge"   Orientation="Horizontal" Margin="0,0,0,12">
            <Grid x:Name="Gdmarge" Margin="0,0,0,-12" Width="60" Background="#FF7BD9EE">
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,9,5,0" 
               VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right"/>
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,0,5,0" 
                    VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right"/>
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,0,5,0" 
                    VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right"/>
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,0,5,0" 
                    VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right"/>
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,0,5,0" 
                    VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right"/>
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,0,5,0" 
                    VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right"/>
                <Button Content="+" HorizontalAlignment="Left" Height="17" VerticalAlignment="Top" Width="36" Padding="0,-3,0,0" 
                        VerticalContentAlignment="Top" UseLayoutRounding="True" Click="Button_Click" Margin="10,4,0,0"/>
            </Grid>
            <Grid x:Name="GdJour" MouseLeftButtonDown="Epingle_MouseLeftButtonDown" MouseMove="Epingle_MouseMove"  
                                MouseLeftButtonUp="Epingle_MouseLeftButtonUp"  Margin="0,40,0,0" Width="100" Background="#3E91EA99" >
               <Label Margin="62,-30,0,0" VerticalAlignment="Top" Background="#FFE82020" HorizontalAlignment="Left">essai</Label>
               <local:epingle  MouseLeftButtonDown="Epingle_MouseLeftButtonDown_1"  MouseRightButtonUp="Tmp_MouseRightButtonUp"
                                x:Name="Epingle" Height="428" Margin="-22,-30,0,0" 
                                VerticalAlignment="Top" Width="44" HorizontalAlignment="Left">
                </local:epingle>
                <local:epingle  MouseLeftButtonDown="Epingle_MouseLeftButtonDown_1" MouseRightButtonUp="Tmp_MouseRightButtonUp"
                                 Height="428" Margin="-22,-30,0,0" 
                                VerticalAlignment="Top" Width="44" HorizontalAlignment="Left">
                </local:epingle>
              </Grid>
        </StackPanel>
    </Grid>
