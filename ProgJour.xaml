        <Line X1="0" Y1="20" X2="{Binding ElementName=Gdecran,Path=ActualWidth}" Y2="20" Stroke="#FF21E1FF" Margin="60,0,0,0" Tag="H" />
        <Line X1="0" Y1="20" X2="{Binding ElementName=Gdecran,Path=ActualWidth}" Y2="20" Stroke="#FF21E1FF" Margin="60,0,0,0" Tag="H" />
        <Line X1="0" Y1="20" X2="{Binding ElementName=Gdecran,Path=ActualWidth}" Y2="20" Stroke="#FF21E1FF" Margin="60,0,0,0" Tag="H" />
        <Line X1="0" Y1="20" X2="{Binding ElementName=Gdecran,Path=ActualWidth}" Y2="20" Stroke="#FF21E1FF" Margin="60,0,0,0" Tag="H" />
        <Line X1="0" Y1="20" X2="{Binding ElementName=Gdecran,Path=ActualWidth}" Y2="20" Stroke="#FF21E1FF" Margin="60,0,0,0" Tag="H" />
        <Line Tag="V"  X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line Tag="V"  X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <Line X1="100" Stroke="#FF2557FF" Margin="60,0,0,0" Tag="V" X2="100" Y2="{Binding ElementName=Gdecran,Path=ActualHeight}" />
        <StackPanel x:Name="Skmarge"   Orientation="Horizontal" Margin="0,0,0,-36">
            <Grid x:Name="Gdmarge" Margin="0,0,0,37" Width="60" Background="#FF252526">
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,9,5,0" 
               VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right" Foreground="#FF5AF8FF"/>
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,0,5,0" 
                    VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right" Foreground="#FF5AF8FF"/>
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,0,5,0" 
                    VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right" Foreground="#FF5AF8FF"/>
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,0,5,0" 
                    VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right" Foreground="#FF5AF8FF"/>
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,0,5,0" 
                    VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right" Foreground="#FF5AF8FF"/>
                <Label Content="10" HorizontalAlignment="Right" Height="12" Margin="0,0,5,0" 
                    VerticalAlignment="Top" Width="44" Padding="0" FontSize="10" HorizontalContentAlignment="Right" Foreground="#FF5AF8FF"/>
                <Button Content="+" HorizontalAlignment="Left" Height="17" VerticalAlignment="Top" Width="36" Padding="0,-3,0,0" 
                        VerticalContentAlignment="Top" UseLayoutRounding="True" Click="Button_Click" Margin="1,4,0,0"/>
            </Grid>
            <Grid x:Name="GdJour" MouseLeftButtonDown="Epingle_MouseLeftButtonDown" MouseMove="Epingle_MouseMove"  
                                MouseLeftButtonUp="Epingle_MouseLeftButtonUp"  Margin="0,0,0,0" Width="100" Background="#0291EA99" >
                <Label x:Name="LbH" Margin="2,2,-86,0" VerticalAlignment="Top" Background="{x:Null}" HorizontalAlignment="Left"
                        Width="184" Foreground="#FF7080A2" Content="{Binding ElementName=LbJour,Path=Content}" 
                       FontWeight="Bold" FontSize="20">
                    <Label.Effect>
                        <BlurEffect Radius="3"/>
                    </Label.Effect>
                </Label>
               <Label x:Name="LbJour" Margin="-1,-1,-83,0" VerticalAlignment="Top" Background="{x:Null}" HorizontalAlignment="Left" Width="184" Foreground="White" FontWeight="Bold" FontSize="20">essai</Label>
                <local:epingle  MouseLeftButtonDown="Epingle_MouseLeftButtonDown_1"  MouseRightButtonUp="Tmp_MouseRightButtonUp"
                                x:Name="Epingle"  Margin="-22,0,0,0" 
                                Width="44" HorizontalAlignment="Left">
                </local:epingle>
                <local:epingle  MouseLeftButtonDown="Epingle_MouseLeftButtonDown_1" 
                                MouseRightButtonUp="Tmp_MouseRightButtonUp" 
                                Margin="-22,0,0,0" Width="44" HorizontalAlignment="Left"/>
            </Grid>
        </StackPanel>
    </Grid>
